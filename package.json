{
  "name": "tabata",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "i18n:report": "vue-cli-service i18n:report --src './src/**/*.?(js|vue)' --locales './src/locales/**/*.json'",
    "lint:write": "prettier --write src/**/*.{js,vue}",
    "spell": "yaspeller src/locales/*.json",
    "test:unit": "vue-cli-service test:unit",
    "test": "yarn run spell && yarn run lint && yarn run test:unit"
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "vue": "^2.6.12",
    "vue-i18n": "^8.21.1",
    "vue-router": "^3.4.4",
    "vuex": "^3.5.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.11.5",
    "@vue/cli-plugin-babel": "^4.5.6",
    "@vue/cli-plugin-eslint": "^4.5.6",
    "@vue/cli-plugin-unit-jest": "^4.5.6",
    "@vue/cli-service": "^4.5.6",
    "@vue/test-utils": "1.1.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.3.0",
    "codecov": "^3.7.2",
    "eslint": "^7.9.0",
    "eslint-plugin-vue": "^6.2.2",
    "husky": "^4.3.0",
    "jest-vue-preprocessor": "^1.7.1",
    "lint-staged": "^10.4.0",
    "postcss-flexbugs-fixes": "^4.2.1",
    "postcss-font-family-system-ui": "^5.0.0",
    "postcss-pxtorem": "^5.1.1",
    "prettier": "^2.1.2",
    "vue-cli-plugin-i18n": "^1.0.1",
    "vue-template-compiler": "^2.6.12",
    "yaspeller": "^7.0.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "jest": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "postcss-pxtorem": {
        "rootValue": 16,
        "mediaQuery": true,
        "propList": [
          "font",
          "font-size",
          "line-height",
          "letter-spacing",
          "margin",
          "padding"
        ]
      },
      "postcss-flexbugs-fixes": {},
      "postcss-font-family-system-ui": {},
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "last 2 versions",
    "not ie <= 10"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run test:unit"
    }
  },
  "lint-staged": {
    "*.(js|vue)": [
      "yarn run lint:write",
      "vue-cli-service lint",
      "git add"
    ],
    "src/locales/*.json": [
      "yarn spell",
      "git add"
    ]
  }
}
